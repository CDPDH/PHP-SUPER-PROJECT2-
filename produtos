<?php
session_start();

if (!isset($_SESSION['usuario'])) {
    echo "Você precisa fazer login. <a href='index.php'>Voltar</a>";
    exit;
}

$tema = $_SESSION['tema'] ?? 'claro';

if ($tema == 'escuro') {
    $fundo = "#222";
    $corTexto = "#eee";
} elseif ($tema == 'azul') {
    $fundo = "#cce7ff";
    $corTexto = "#003366";
} elseif ($tema == 'verde') {
    $fundo = "#d4f4dd";
    $corTexto = "#034d02";
} else { 
    $fundo = "#fff";
    $corTexto = "#000";
}

$produtos = ["Camisa", "Calça", "Sapato", "Boné", "Meia", "Tênis"];

$busca = strtolower($_GET['busca'] ?? '');

echo "<body style='background-color: $fundo; color: $corTexto; font-family: Arial;'>";

echo "<h2>Olá, " . $_SESSION['usuario'] . "!</h2>";

echo "<form method='GET'>
Buscar produto: <input type='text' name='busca' value='" . htmlspecialchars($_GET['busca'] ?? '') . "'>
<input type='submit' value='Pesquisar'>
</form>";

echo "<table border='1' cellpadding='10'>";
echo "<tr><th>Produtos</th></tr>";

foreach ($produtos as $produto) {
    if ($busca == '' || strpos(strtolower($produto), $busca) !== false) {
        echo "<tr><td>$produto</td></tr>";
    }
}

echo "</table>";

echo "<br><a href='index.php'>Sair</a>";

echo "</body>";
?>
